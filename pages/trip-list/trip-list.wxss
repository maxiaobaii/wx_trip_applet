/* 账本列表页面样式 */
.container {
  padding: 20rpx;
}

/* 用户信息区域样式 */
.user-info {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.user-header {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.nickname {
  font-size: 32rpx;
  font-weight: bold;
}

/* 账本列表样式 */
.trip-list {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
}

.list-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
}

.create-btn {
  font-size: 28rpx;
  padding: 10rpx 30rpx;
  background: #1890ff;
  color: #fff;
  border-radius: 30rpx;
}

.loading, .empty {
  text-align: center;
  padding: 40rpx;
  color: #999;
}

.tip {
  display: block;
  font-size: 24rpx;
  margin-top: 10rpx;
}

.trip-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.trip-info {
  flex: 1;
}

.trip-title {
  font-size: 32rpx;
  margin-bottom: 10rpx;
  display: block;
}

.trip-date {
  font-size: 24rpx;
  color: #999;
  display: block;
}

.trip-amount {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff4d4f;
}
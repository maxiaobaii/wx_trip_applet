/* 账本详情页面样式 */
.container {
  padding: 20rpx;
}

.loading {
  text-align: center;
  padding: 40rpx;
  color: #999;
}

/* 账本信息样式 */
.trip-info {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.header {
  margin-bottom: 30rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.date {
  font-size: 28rpx;
  color: #666;
}

/* 总费用统计样式 */
.total-amount {
  background: #f8f8f8;
  padding: 20rpx;
  border-radius: 8rpx;
  margin-bottom: 30rpx;
}

.label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.amount {
  font-size: 48rpx;
  font-weight: bold;
  color: #ff4d4f;
}

/* 成员列表样式 */
.members {
  margin-bottom: 30rpx;
}

.member-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-top: 20rpx;
}

.member {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-bottom: 10rpx;
}

.nickname {
  font-size: 24rpx;
  color: #666;
}

/* 消费记录列表样式 */
.expenses {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.expenses-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.add-btn {
  font-size: 28rpx;
  padding: 10rpx 30rpx;
  background: #1890ff;
  color: #fff;
  border-radius: 30rpx;
}

.empty {
  text-align: center;
  padding: 40rpx;
  color: #999;
}

.expense-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.expense-info {
  flex: 1;
}

.expense-title {
  font-size: 32rpx;
  margin-bottom: 10rpx;
}

.expense-date {
  font-size: 24rpx;
  color: #999;
}

.expense-amount {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff4d4f;
}

/* 操作按钮样式 */
.actions {
  display: flex;
  gap: 20rpx;
}

.edit-btn, .delete-btn {
  flex: 1;
  font-size: 32rpx;
  padding: 20rpx;
  border-radius: 8rpx;
}

.edit-btn {
  background: #1890ff;
  color: #fff;
}

.delete-btn {
  background: #ff4d4f;
  color: #fff;
}